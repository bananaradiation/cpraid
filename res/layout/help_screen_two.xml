<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="640dp"
              android:layout_height="360dp"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context=".MainScreen"
              android:background="#000"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="@string/rescue"
            android:id="@+id/instruction" android:textColor="#ffffff" android:textSize="20sp"
            android:textStyle="italic" android:layout_gravity="center" android:layout_marginLeft="-120dp"
            android:layout_marginTop="-5dp"/>

    <ImageView
            android:layout_width="230dp"
            android:layout_height="188dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/blowani"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="@string/swipeB"
            android:id="@+id/instruction" android:textColor="#ffffff" android:textSize="20sp"
            android:textStyle="italic" android:layout_gravity="center" android:layout_marginLeft="-120dp"
            android:layout_marginTop="16dp"/>
</LinearLayout>